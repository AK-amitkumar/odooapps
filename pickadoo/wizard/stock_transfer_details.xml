<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<record id="stock_transfer_details_view_form" model="ir.ui.view">
    <field name="model">stock.transfer_details</field>
    <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
    <field name="arch" type="xml">
        <field name="picking_destination_location_id" position="after">
            <field name="carrier_id" widget="radio"/>

            <group col="4">
                <field name="manual_tracking_ref"/>
                <button
                    colspan="2"
                    name="do_detailed_transfer_manual_tracking"
                    type="object"
                    string="Validate Without Print"
                    attrs="{'invisible': [('manual_tracking_ref', '=', False)]}"/>
                <field name="mobile"/>
                <field name="phone"/>
            </group>
        </field>
        <button name="do_detailed_transfer" position="attributes">
            <attribute name="invisible">context.get('type') == 'outgoing'</attribute>
        </button>
        <button name="do_detailed_transfer" position="before">
            <button
                name="do_detailed_transfer_with_print"
                string="Print and Ship"
                type="object"
                class="oe_highlight"
                invisible="context.get('type') != 'outgoing'"/>
        </button>
    </field>
</record>

    </data>
</openerp>
