<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<record id="stock_transfer_details_view_form" model="ir.ui.view">
    <field name="model">stock.transfer_details</field>
    <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
    <field name="arch" type="xml">
        <button name="do_detailed_transfer" position="attributes">
            <attribute name="invisible">context.get('type') == 'outgoing'</attribute>
        </button>
        <button name="do_detailed_transfer" position="before">
            <button
                name="do_detailed_transfer_with_print"
                string="Print and Ship"
                type="object"
                class="oe_highlight"
                invisible="context.get('type') != 'outgoing'"/>
            <button
                name="%(stock_split_menu.action_picking_out_tree)d"
                string="Exit"
                type="action"
                invisible="context.get('type') != 'outgoing'"/>
        </button>
    </field>
</record>

    </data>
</openerp>
